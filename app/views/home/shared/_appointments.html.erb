      <%= link_to app, method: :delete, data: { confirm: 'Tem Certeza?' },  remote: :true  do %>
        <i class="bi bi-calendar-x-fill">X</i>
      <% end %>
    <% end %>

    <% nothing = false%>
  <% end %>
<% end %>
