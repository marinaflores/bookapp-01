</header>

<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name, role: "form")) do |f| %>
    <h2 class="text-center">Log in</h2>
    <div class="form-group">


        <%= f.email_field :email, class:"form-control", placeholder: "Email", type: "email", autofocus: "autofocus" %>
    </div>
    <div class="form-group">

        <%= f.password_field :password, autocomplete: "current-password", type: "password", class: "form-control", placeholder: "Password", required: "required" %>
    </div>
    <div class="form-group">
        <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        <%= render "users/shared/links" %>
    </div>
  <% end %>
</div>

